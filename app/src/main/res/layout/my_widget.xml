<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myback"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="230dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/widgetmusic"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widgetad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="marquee"
                            android:maxLines="1"
                            android:selectAllOnFocus="false"
                            android:singleLine="false"
                            android:text="Şarkı Adı"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textIsSelectable="false"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/widgetsanatci"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="marquee"
                            android:maxLines="1"
                            android:selectAllOnFocus="false"
                            android:singleLine="false"
                            android:text="Sanatçı"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/widgetrewind"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:src="@drawable/widgetrewind" />

                            <ImageView
                                android:id="@+id/widgetplay"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/cardview_light_background"
                                android:clickable="?android:attr/windowOverscan"
                                android:src="@drawable/widgetplay" />

                            <ImageView
                                android:id="@+id/widgetforward"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:src="@drawable/widgetforward" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/myback"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/widgetlst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>